{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="col-lg-offset-3 col-lg-6">
            <div class="signup-panel">
                <div class="title">Connexion</div>

                <div class="col-lg-offset-2 col-lg-8">


                {% if error %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                   

                    <form action="{{ path('sign-in') }}" method="post">
                    <div>
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="_username"/>
                    </div>
                    <br>
                    <div>
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" />
                    </div>
                       <button type="submit" class="col-lg-offset-4 btn btn-danger">Se connecter !</button>
                    </form>
                   
                </div>
                <div class="col-lg-offset-2 col-lg-8">
                    <hr />

                    <p style="text-align: center;">Vous n'avez pas de compte? <a href="{{ path('sign-up') }}">Inscrivez-vous !</a></p>
                </div>

            </div>
        </div>
    </div>
{% endblock %}