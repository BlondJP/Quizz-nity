{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Mes scores {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/quizs.css') }}" />
{% endblock %}

{% block body %}
    <div class="container">

        {% for game in games %}
            <div class="col-lg-6">
                <div class="quiz-bloc">
                    <div class="title">
                        Quiz : {{ game.quiz.nom }}
                        <br />
                        Score : {{ game.score }}/5
                        <br />
                        Temps : {{ game.timeOfTheGame }} secondes
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

