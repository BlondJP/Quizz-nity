{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | All QuiZ {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/quizs.css') }}" />
{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-lg-12">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="quiz-bloc">
                    <div class="title">Formulaire de Recherche</div>
                    <div class="col-lg-12">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        {% if quizs != [] %}
            <div class="col-lg-12">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="panel panel-default">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nom du quiz</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for quiz in quizs %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('quiz', {'id': quiz.id}) }}">{{ quiz.nom }}</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            Aucun r√©sultat pour votre recherche
        {% endif %}

    </div>
{% endblock %}